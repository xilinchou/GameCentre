<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/settings_dialog"
        android:layout_width="650dp"
        android:layout_height="400dp"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/bghud51">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:gravity="center"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@android:color/transparent">

            <LinearLayout
                android:id="@+id/buy_starboat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bghud4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/starboat1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_star"/>

                    <ImageView
                        android:id="@+id/starboat2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_boat"/>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/starboat3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/starboat4"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/gold_bar2" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/starboat_gold"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/starboat_count"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="11sp" />



                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/buy_clockshovel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bghud4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/clockshovel1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_clock"/>

                    <ImageView
                        android:id="@+id/clockshovel2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_shovel"/>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/clockshovel3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/clockshovel4"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/gold_bar2" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/clockshovel_gold"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/clockshovel_count"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="11sp" />



                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/buy_gunhelmet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bghud4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/gunhelmet1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_gun"/>

                    <ImageView
                        android:id="@+id/gunhelmet2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_helmet"/>

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/gunhelmet3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/gunhelmet4"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/gold_bar2"  />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/gunhelmet_gold"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/gunhelmet_count"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                </RelativeLayout>
            </LinearLayout>







            <LinearLayout
                android:id="@+id/buy_tank"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bghud4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tankgrenade1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_tank"/>

                    <ImageView
                        android:id="@+id/tankgrenade2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bonus_grenade"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tankgrenade3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/tankgrenade4"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/gold_bar2" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="@string/tankgrenade_gold"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/tankgrenade_count"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="11sp" />



                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buy_gold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.5"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bghud4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/gold1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/gold_stack"/>

                <RelativeLayout
                    android:id="@+id/gold2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/gold_cost"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/goldbar_count"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="11sp" />



                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/gold_stash"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gold_stack3" />

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/stashTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/gold_stash"
                    android:text="x50"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/btn3">

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/watchBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_weight="1.5"
                    android:text="Watch\nVideo"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.0">

                    <ImageView
                        android:id="@+id/watchgold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gold_bar" />

                    <com.gamecentre.classicgames.tank.TankTextView
                        android:id="@+id/watchGoldTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:text="x1"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>
            </LinearLayout>

            <com.gamecentre.classicgames.tank.TankTextView
                android:id="@+id/buyCancelBtn"
                android:layout_width="0dp"
                android:layout_height="60sp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="@color/white"
                android:background="@drawable/btn3"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>