<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".tank.TankMenuActivity">

    <ImageView
        android:id="@+id/tnkLogo"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tnklogo"
        android:layout_marginTop="54dp" />

    <Button
        android:id="@+id/inviteBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/PStatus"
        android:layout_alignBottom="@+id/PStatus"
        android:layout_marginStart="29dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="38dp"
        android:layout_toEndOf="@+id/PStatus"
        android:background="@drawable/tnk_invite" />

    <com.gamecentre.classicgames.tank.TankTextView
        android:id="@+id/ivName"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inviteBtn"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/inviteBtn"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:textColor="@color/white"
        android:textSize="10sp"/>

    <LinearLayout
        android:id="@+id/PStatus"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_below="@+id/tnkLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.gamecentre.classicgames.tank.TankTextView
            android:id="@+id/tnkP1menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="1 Player"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.gamecentre.classicgames.tank.TankTextView
            android:id="@+id/tnkP2menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="2 Players"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.gamecentre.classicgames.tank.TankTextView
            android:id="@+id/tnkExitmenu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:text="Exit"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/settings2"/>


</RelativeLayout>