<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tank.TankMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bghud4">


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_grenade"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/grenadeCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_helmet"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/shieldCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_clock"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/clockCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_shovel"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/shovelCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_tank"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/tankCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_star"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/starCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_gun"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/gunCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bonus_boat"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/boatCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/gold_stack2"/>

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/goldCountTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/brick_brown"
                    android:textSize="12sp"
                    android:text="10"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/shop"/>

            </LinearLayout>


        </LinearLayout>

        <com.gamecentre.classicgames.tank.TankTextView
            android:id="@+id/tnkExitmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/titleCard"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="16dp"
            android:text="BACK"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/titleCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:background="@drawable/bghud5"
                android:gravity="center"
                android:orientation="vertical">

                <com.gamecentre.classicgames.tank.TankTextView
                    android:id="@+id/tanktype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/inviteBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/PStatus"
            android:layout_alignBottom="@+id/PStatus"
            android:layout_marginStart="6dp"
            android:layout_marginTop="78dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/PStatus"
            android:background="@drawable/tnk_invite" />

        <com.gamecentre.classicgames.tank.TankTextView
            android:id="@+id/ivName"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/inviteBtn"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/inviteBtn"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/invite_def_txt"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/PStatus"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.gamecentre.classicgames.tank.TankTextView
                android:id="@+id/tnkP1menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1 Player"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.gamecentre.classicgames.tank.TankTextView
                android:id="@+id/tnkP2menu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2 Players"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <!--        <Button-->
        <!--            android:id="@+id/settingsBtn"-->
        <!--            android:layout_width="50dp"-->
